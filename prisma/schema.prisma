enum WeekDays {
  SATURDAY
  SUNDAY
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
}

enum OrderStatus {
  COMPLETE
  INCOMPLETE
}

enum Role {
  ADMIN
  SUPER_ADMIN
  CUSTOMER
}

enum Fuel {
  OKTEN
  DISEL
  PETROL
}

enum PaymentStatus {
  PENDING
  PAID
}
